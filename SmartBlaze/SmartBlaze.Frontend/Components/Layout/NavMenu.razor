@inject ChatController chatController

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand">SmartBlaze</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable h-75" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @if (chats is null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link">
                    Loading...
                </NavLink>
            </div>
        }
        else
        {
            @foreach (var chat in chats)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href=@($"chat/{chat.Id}")>
                        <img src="icons/chat-dots-fill.svg" width="20" height="20" alt="chat icon" class="me-2"/> @chat.Title
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>

<div class="border-top border-1 border-white">
    <div class="nav-item px-3">
        <NavLink class="nav-link user-select-none">
            New chat
        </NavLink>
    </div>
    
</div>

@code
{
    private List<Chat>? chats;

    protected override void OnInitialized()
    {
        chats = chatController.GetAllChats();
    }
}
